<div class="container mt-5">
  <div class="text-center">
    <h1>List your favorite movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
  <div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <h3>My list</h3>
      <%= link_to "Create a new list", new_list_path, class: "btn-flat" %>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-md-4 mb-3">
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card mb-3">
            <div class="card-body">
              <%= link_to list_path(list), class: 'text-decoration-none' do %>
                  <h5 class="card-title"><%= list.name %></h5>
                  <p><%= list.movies.count %> movies</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
